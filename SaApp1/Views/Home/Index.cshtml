@using SaApp1.Models
@model LoginUser
@{
    ViewBag.Title = "Signature Assessment Login Page";
}

<h3>@ViewBag.Title</h3>

@if (ViewBag.Message != "")
{
    <h6>@ViewBag.Message</h6>
}

@using (Html.BeginForm("LoginMethod", "Home", FormMethod.Post))
{
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(a => a.FullName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(a => a.FullName, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.FullName)
            </div>

            @Html.LabelFor(a => a.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(a => a.Password, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Password)
                <input type="submit" value="Login" id="btnLogin" formmethod="post" class="btn btn-default" />
            </div>
        </div>


    </div>
}
